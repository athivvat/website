---
interface Props {
  author?: string;
  source?: string;
  class?: string;
}

const { author, source, class: className = "" } = Astro.props;
---

<blockquote class={`relative p-6 bg-neutral-800/80 border-l-4 border-blue-500 rounded-r-lg backdrop-blur-sm ${className}`}>
  <!-- Quote Icon -->
  <div class="absolute -top-2 -left-2 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
    </svg>
  </div>

  <!-- Quote Content -->
  <div class="relative">
    <div class="text-neutral-100 text-lg leading-relaxed italic font-medium">
      <slot />
    </div>
    
    <!-- Attribution -->
    {(author || source) && (
      <footer class="mt-4 text-sm text-neutral-400">
        {author && <cite class="not-italic font-medium text-neutral-300">{author}</cite>}
        {source && (
          <span class="block text-neutral-500 mt-1">{source}</span>
        )}
      </footer>
    )}
  </div>
</blockquote>

<style>
  blockquote {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  blockquote:hover {
    background-color: rgba(38, 38, 38, 0.6);
    transition: background-color 0.2s ease;
  }
</style> 